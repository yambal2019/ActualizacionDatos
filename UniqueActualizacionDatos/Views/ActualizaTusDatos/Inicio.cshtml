@model UniqueActualizacionDatos.Models.ConsultoraModel
@using System.Web.Mvc
@using System.Collections

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        .loginpage img {
            text-align: center;
        }

        .btn-enviar {
            background-color: #ff6900;
            color: white;
            width: 100%;
        }
    </style>
</head>
<body class=" login_page">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm("Inicio","ActualizaTusDatos",FormMethod.Post, new { id="frmActualizaDatos"}))
    {
        @Html.AntiForgeryToken()
        {



            <div class="login-wrapper">
                <div id="login" class="login loginpage col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-2 col-xs-8" style="margin-top: 44.5px;    padding: 0 30px; ">
                    <div class="form-group" style="text-align:center">

                        <img alt="xxx" src="~/Image/yanbal-logo.png" />
                    </div>

                    <div class="form-group" style="margin-top:30px">
                        <label class="form-label">Tipo de Documento :</label>

                        @Html.DropDownListFor(m => m.TipoDocumentoId, Model.ListaTipoDocumento, "- Seleccione -", new { @class = "form-control" })
                    </div>

                    <div class="form-group">


                        <label class="form-label"> Número : </label>
                        <div class="">
                            @Html.EditorFor(model => model.vchDato, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vchDato, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="color:red">
                            @ViewBag.Message

                        </div>
                    </div>

                    <div class="form-group">
                        <button id="saveOrder" type="submit" class="btn btn-enviar">Enviar</button>
                    </div>


                </div>
            </div>

        }


    }


</body>
</html>


