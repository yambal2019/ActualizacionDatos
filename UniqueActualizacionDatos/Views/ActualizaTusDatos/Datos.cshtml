@model UniqueActualizacionDatos.Models.ConsultoraModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


    <style>
        .loginpage img {
            text-align: center;
        }

        .btn-enviar {
            background-color: #ff6900;
            color: white;
            width: 100%;
        }

        .btn-color {
            background-color: #ff6900;
            color: white;
        }

        /*css process modal -  processing-modal*/
        .modal-static {
            position: fixed;
            top: 50% !important;
            left: 50% !important;
            margin-top: -100px;
            margin-left: -150px;
            overflow: visible !important;
        }

            .modal-static,
            .modal-static .modal-dialog,
            .modal-static .modal-content {
                width: 300px;
                height: 90px;
            }

                .modal-static .modal-dialog,
                .modal-static .modal-content {
                    padding: 0 !important;
                    margin: 0 !important;
                }


        .modal-text {
            text-align: center;
            font-family: Cambria;
            font-weight: bold;
            font-size: medium;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body class=" login_page">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")


    <script src="~/Scripts/jquery.inputmask.bundle.min.js"></script>
    @*  <script src="~/Scripts/Validacion.js"></script>*@


    @using (Html.BeginForm("Datos", "ActualizaTusDatos", FormMethod.Post, new { id = "frmvalidacion" }))
    {
        @Html.AntiForgeryToken()
        {
            HtmlHelper.UnobtrusiveJavaScriptEnabled = false;


            <div class="login-wrapper">
                <div id="login" class="login loginpage col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-2 col-xs-8" style="margin-top: 44.5px;    padding: 0 30px; ">
                    <div class="form-group" style="text-align:center">

                        <img alt="xxx" src="~/Image/yanbal-logo.png" />
                    </div>

                    <div class="form-group" style="margin-top:30px">
                        <label class="form-label">HOLA,  @Model.vchNombre</label>


                    </div>

                    <div class="form-group">
                        <label class="form-label"> Celular : </label>
                        <div class="">
                            @Html.EditorFor(model => model.vchTelefono, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vchTelefono, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label"> Email : </label>
                        <div class="">
                            @Html.EditorFor(model => model.vchEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.vchEmail, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">

                        <div class="">
                            @Html.CheckBoxFor(model => model.bitTerminosCondiciones, new { @class = "" })
                            @Html.ValidationMessageFor(model => model.bitTerminosCondiciones, "", new { @class = "text-danger" })

                            <a href=@Url.Content("~/Content/Terminos_Condiciones.pdf") target="_blank" class="kt-widget__value kt-font-brand"> Terminos y Condiciones </a>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="color:red">
                            @ViewBag.Message

                        </div>
                    </div>

                    <div class="form-group">
                        <button id="saveOrder" type="submit" class="btn btn-enviar">Guardar</button>
                    </div>


                </div>
            </div>

        }


    }

    <!-- Modal -->
    <div class="modal fade" id="Informacion-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"> Información </h4>
                </div>
                <div class="modal-body">
                    <p> <label id="msg"></label></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-color" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>
    <!-- Modal 2 -->
    <div class="modal modal-static fade" id="processing-modal" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="text-center">
                        <img src=@Url.Content("../Image/loading.gif") class="icon" />
                        <h5><span class="modal-text">Procesando, Espere por favor... </span></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        $(document).ready(function () {

            $("#vchTelefono").inputmask({ "mask": "999-999-999" });

             var mailformat = /^\w+([\.-]?\w+)*@@{1}(hotmail.com|gmail.com|yahoo.com|yahoo.es|outlook.com|pucp.pe|pucp.edu.pe|tespro.com.pe|hotmail.es)+$/;

            jQuery.validator.addMethod("formato", function (value, element) {
                return this.optional(element) || mailformat.test(value)
            }, "Error formato");



            $("#frmvalidacion").validate({
                submitHandler: function () {
                    EnviarDatos();
                },
                rules: {
                    vchTelefono: {
                        required: true
                    },
                    vchEmail: {
                        formato: true,
                        //required: true
                    },
                    bitTerminosCondiciones: {
                        required: true
                    }
                },
                messages: {

                    vchEmail: { formato: "Email incorrecto  "  },
                    bitTerminosCondiciones: { required: " (*)   " },
                    vchTelefono:{required: "Ingrese un telefono "}
                //required: " ",
                //email: "Please enter a valid email address, example: you@yourdomain.com",
                //remote: jQuery.validator.format("{0} is already taken, please enter a different address.")

        }
    });



        });

         function EnviarDatos() {
                var mdInformacion = $("#Informacion-modal");
                var md = $("#processing-modal");

                md.modal('show');

                var telefono= $("#vchTelefono").inputmask('unmaskedvalue');
                var consultoraModel = {
                     vchEmail: $('#vchEmail').val().trim(),
                     vchTelefono: telefono
                };


                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ProcesarDatosAsync", "ActualizaTusDatos")',
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: JSON.stringify(consultoraModel),
                    success: function (result) {             
                        $('#msg').html(result.texto);

                        if (result.Exito = 1) {
                          md.modal('hide');
                          mdInformacion.modal('show');
                        }
                    },
                    error: function () {
                        md.modal('hide');
                        alert("Ha fallado la actualización de los datos ");
                    }
                });

            };

    </script>
</body>
</html>